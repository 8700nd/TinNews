<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/home_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:defaultQueryHint="Country Abbreviation (Default: us)"
        app:iconifiedByDefault="false" />

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/home_card_stack_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/button_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="70dp"
        android:clipChildren="false">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_unlike_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/home_rewind_button"
            android:layout_toStartOf="@+id/home_rewind_button"
            android:src="@drawable/ic_thumb_down_24dp"
            app:backgroundTint="@android:color/white"
            app:tint="#FF5D57"
            app:fabSize="auto"
            app:rippleColor="#22ED7563"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_rewind_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_rewind_blue_24dp"
            app:backgroundTint="@android:color/white"
            app:tint="#EC910A"
            app:fabSize="mini"
            app:rippleColor="#22F1CC12"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_rewind_button"
            android:layout_toEndOf="@+id/home_rewind_button"
            android:src="@drawable/ic_thumb_up_24dp"
            app:tint="#00A76F"
            app:backgroundTint="@android:color/white"
            app:fabSize="auto"
            app:rippleColor="#226FE2B3"/>

    </RelativeLayout>
</LinearLayout>
